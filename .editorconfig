root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

; Python
[*.py]
indent_size = 4

; Shell
[*.sh]
indent_size = 4

; SQL
[*.sql]
indent_size = 4

; Javascript
[*.js]
indent_size = 2

; CSS
[*.css]
indent_size = 2

; YAML
[*.{yaml,yml}]
indent_size = 2

; Html
[*.{htm,html}]
indent_size = 2

; Markdown
[*.{md,rst}]
indent_size = 2
trim_trailing_whitespace = false
